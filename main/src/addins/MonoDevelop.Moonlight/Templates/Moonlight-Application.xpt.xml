<?xml version="1.0"?>
<Template originator="Michael Hutchinson"
          created="2008/03/04"
          lastModified="2008/03/04">
	
	<!-- Template Header -->
	<TemplateConfiguration>
		<_Name>Moonlight Application Project</_Name>
		<_Category>C#/Moonlight</_Category>
		<Icon>md-project-web</Icon>
		<LanguageName>C#</LanguageName>
		<_Description>Creates a Moonlight application project.</_Description>
	</TemplateConfiguration>
	
	<!-- Actions -->
	<Actions>
	</Actions>
	
	<!-- Template Content -->
	<Combine name = "${ProjectName}" directory = ".">
		<Options>
			<StartupProject>${ProjectName}</StartupProject>
		</Options>
		
		<Project name = "${ProjectName}" directory = "." type = "Moonlight">
			<Options>
				<SilverlightApplication>True</SilverlightApplication>
			</Options>
			<References>
				<Reference type="Gac" refto="System.Windows" />
				<Reference type="Gac" refto="mscorlib" />
				<Reference type="Gac" refto="System" />
				<Reference type="Gac" refto="System.Core" />
				<Reference type="Gac" refto="System.Xml" />
				<Reference type="Gac" refto="System.Net" />
				<Reference type="Gac" refto="System.Windows.Browser" />
			</References>
			<Files>
				<FileTemplateReference TemplateID="Moonlight-XamlWithCodeBehind" name="App" />
				<FileTemplateReference TemplateID="Moonlight-XamlWithCodeBehind" name="Page" />
			</Files>
		</Project>
	</Combine>
</Template>
