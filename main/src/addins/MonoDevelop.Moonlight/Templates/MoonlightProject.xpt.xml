<?xml version="1.0"?>
<Template originator="Michael Hutchinson"
          created="2008/03/04"
          lastModified="2008/03/04">
	
	<!-- Template Header -->
	<TemplateConfiguration>
		<_Name>Moonlight Project</_Name>
		<_Category>Moonlight</_Category>
		<Icon>md-project-web</Icon>
		<LanguageName>*</LanguageName>
		<_Description>Creates a Moonlight project.</_Description>
	</TemplateConfiguration>
	
	<!-- Actions -->
	<Actions>
	</Actions>
	
	<!-- Template Content -->
	<Combine name = "${ProjectName}" directory = ".">
		<Options>
			<StartupProject>${ProjectName}</StartupProject>
		</Options>
		
		<Project name = "${ProjectName}" directory = "." type = "Moonlight">
			<Options />
			<References>
				<Reference type="Gac" refto="System.Core, Version=2.1.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" />
				<Reference type="Gac" refto="System, Version=2.1.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e0899" />
			</References>
			<Files>
				<FileTemplateReference TemplateID="Moonlight-XamlWithCodeBehind" name="${EscapedProjectName}" />
				<FileTemplateReference TemplateID="Moonlight-TestPage" name="TestPage.html" />
				<FileTemplateReference TemplateID="Moonlight-CreateSilverlightJs" name="CreateSilverlight.js" />
			</Files>
		</Project>
	</Combine>
</Template>
