<?xml version="1.0"?>
<Template originator="Michael Hutchinson"
          created="2008/03/04"
          lastModified="2008/03/04">

	<!-- Template Header -->
	<TemplateConfiguration>
		<_Name>Moonlight test page</_Name>
		<Icon>md-html-file-icon</Icon>
		<_Category>Moonlight</_Category>
		<LanguageName>*</LanguageName>
		<ProjectType>Moonlight</ProjectType>
		<DefaultFilename IsFixed="True">TestPage.html</DefaultFilename>
		<_Description>Creates an HTML page for testing a Moonlight project.</_Description>
	</TemplateConfiguration>
	
	<Conditions>
		<ParentProject PermittedCreationPaths="" ExcludedFiles="/TestPage.html" />
	</Conditions>
	
	<!-- Template Content -->
	<TemplateFiles>
		<AspNetFile name="TestPage.html" DefaultExtension=".html" BuildAction="FileCopy">
			<FileText>
				<![CDATA[${Doctype}
<html>
<head>
	<title>${ProjectName} Test Page</title>
	<script type="text/javascript" src="js/Silverlight.js"></script>
	<script type="text/javascript" src="js/CreateSilverlight.js"></script>
</head>
<body>
	<div id="slPluginHost" >
		<script type="text/javascript">
		var parentElement = document.getElementById("slPluginHost");
		createSilverlightEx();
		</script>
	</div>
</body>
</html>]]>
			</FileText>
		</AspNetFile>
	</TemplateFiles>
</Template>
