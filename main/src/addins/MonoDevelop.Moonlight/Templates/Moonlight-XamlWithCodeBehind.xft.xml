<?xml version="1.0"?>
<Template originator="Michael Hutchinson"
          created="2008/03/04"
          lastModified="2008/03/04">

	<!-- Template Header -->
	<TemplateConfiguration>
		<_Name>Moonlight XAML with CodeBehind</_Name>
		<Icon>md-html-file-icon</Icon>
		<_Category>Moonlight</_Category>
		<LanguageName>*</LanguageName>
		<ProjectType>Moonlight</ProjectType>
		<_Description>Creates a Moonlight/Silverlight XAML file with a CodeBehind class.</_Description>
	</TemplateConfiguration>
	
	<Conditions>
	</Conditions>
	
	<!-- Template Content -->
	<TemplateFiles>
		<File name="${Name}.xaml" DefaultExtension=".xaml" BuildAction="FileCopy">
<![CDATA[<Canvas x:Name="root"
        xmlns="http://schemas.microsoft.com/client/2007"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="${Namespace}.${Name};assembly=ClientBin/${ProjectName}.dll">
	<Canvas Width="200" Height="40" Background="Blue">
		<TextBlock>Hello Moon</TextBlock>
	</Canvas>
</Canvas>
]]></File>
		
		<CodeTranslationFile name="${Name}.xaml.${LanguageExtension}">
<![CDATA[using System;
using System;
using System.Core;
using System.Core.Linq;
using System.Collections.Generic;

namespace ${Namespace} {
	
	public class ${EscapedIdentifier}
	{
		
	}
}]]>
		</CodeTranslationFile>
	</TemplateFiles>
</Template>
