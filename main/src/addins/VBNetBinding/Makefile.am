	icons/VB.FileIcon \
	icons/vb-icon-32.png \
	templates/AssemblyInfo.xft.xml \
	templates/EmptyVBFile.xft.xml \
	templates/EmptyVBProject.xpt.xml \
	templates/VBConsoleApplicationProject.xpt.xml \
	templates/VBGtkSharp2Project.xpt.xml \
