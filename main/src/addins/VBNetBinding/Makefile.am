	AssemblyInfo.cs \
	Gui/CodeGenerationPanel.cs \
	Parser/ExpressionFinder.cs \
	Parser/Parser.cs \
	Parser/Resolver.cs \
	Parser/SharpDevelopTree/Class.cs \
	Parser/SharpDevelopTree/CompilationUnit.cs \
