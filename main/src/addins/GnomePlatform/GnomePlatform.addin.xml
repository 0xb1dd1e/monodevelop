<Addin id          = "GnomePlatform"
       namespace   = "MonoDevelop"
       name        = "GGNOME Platform Support"
       author      = "Geoff Norton"
       copyright   = "MIT X11"
       url         = "http://monodevelop.com/"
       description = "GNOME Platform Support for MonoDevelop"
       category    = "Platform Support"
       version     = "0.17.0">
	
	<Runtime>
		<Import assembly="GnomePlatform.dll"/>
	</Runtime>

	<Dependencies>
		<Addin id="Core" version="0.17.0"/>
	</Dependencies>
	
	<Extension path = "/MonoDevelop/Core/PlatformService">
		<Class id      = "PlatformService"
		       class   = "MonoDevelop.Platform.GnomePlatform"/>
	</Extension>
</Addin>
