<AddIn id          = "MonoDevelop.ILAsmBinding"
       name        = "ILAsm Language Binding"
       author      = "Todd Berman"
       copyright   = "GPL"
       url         = "http://www.monodevelop.com"
       description = "ILAsm Language Binding"
	   category    = "Language bindings"
       version     = "0.9">

  <Runtime>
    <Import assembly = "ILAsmBinding.dll"/>
  </Runtime>

	<Dependencies>
	    <AddIn id="MonoDevelop.Core" version="0.12.0"/>
	    <AddIn id="MonoDevelop.Core.Gui" version="0.12.0"/>
	    <AddIn id="MonoDevelop.Projects" version="0.12.0"/>
		<AddIn id="MonoDevelop.Ide" version="0.12.0"/>
	</Dependencies>
	
  <Extension path = "/MonoDevelop/ProjectTemplates">
    <ProjectTemplate id = "ILAsmConsoleProject"
                     resource = "ILAsmConsoleProject.xpt.xml"/>
  </Extension>
  
  <Extension path = "/SharpDevelop/Workbench/FileFilter">
		<FileFilter id = "ILAsm Files"
		            _label = "ILAsm Files"
		            extensions = "*.il"/>
	</Extension>

  <Extension path = "/SharpDevelop/Workbench/ProjectOptions/ConfigurationProperties">
    <Conditional activelanguage = "ILAsm">
      <DialogPanel id = "ILAsmCompilerParametersPanel"
                   _label = "Compiler"
                   class = "ILAsmBinding.CompilerParametersPanel"/>
    </Conditional>
  </Extension>

  <Extension path = "/SharpDevelop/Workbench/LanguageBindings">
    <LanguageBinding id = "ILAsm"
                     supportedextensions = ".il"
                     class = "ILAsmBinding.ILAsmLanguageBinding"/>
  </Extension>

	<Extension path = "/SharpDevelop/Workbench/SerializableClasses">
		<DataType class = "ILAsmBinding.ILAsmCompilerParameters" />
	</Extension>
	
</AddIn>
