<AddIn	id          = "MonoDevelop.Autotools"
		name        = "MonoDevelop Autotools AddIn"
		author      = "Matthias Braun, Scott Ellington"
        copyright   = "LGPL"
        url         = "http://monodevelop.com"
        description = "AddIn for deploying projects as autotool projects"
        version     = "0.1">
        
	<Runtime>
		<Import assembly="MonoDevelop.Autotools.dll" />
		<Import file="autogen.sh.template"/>		
		<Import file="Makefile.am.project.template"/>		
		<Import file="Makefile.include"/>		
		<Import file="configure.ac.template"/>		
		<Import file="exe.wrapper.in.template"/>		
	</Runtime>

	<Dependencies>
		<AddIn id="MonoDevelop.Core" version="0.12.0"/>
		<AddIn id="MonoDevelop.Core.Gui" version="0.12.0"/>
		<AddIn id="MonoDevelop.Ide" version="0.12.0"/>
		<AddIn id="MonoDevelop.Projects" version="0.12.0"/>
	</Dependencies>
	
	<Extension path = "/SharpDevelop/Workbench/Pads/MonoDevelop.Ide.Gui.Pads.ProjectPad">
		<NodeBuilder id = "AutotoolNodeExtension" class = "MonoDevelop.Autotools.NodeExtension"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/ProjectServiceExtensions" extension-nodes="Class">
		<Class class = "MonoDevelop.Autotools.MakefileReaderExtension" id="MakefileReaderExtension" />
		<Class class = "MonoDevelop.Autotools.MakefileProjectServiceExtension" id="MakefileProjectServiceExtension" />
	</Extension>

	<Extension path = "/SharpDevelop/Commands">
		<Command id = "MonoDevelop.Autotools.Commands.GenerateFiles"
			_label = "Generate Autotools Files"
			description="Generate autotools files for a solution"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Views/ProjectBrowser/ContextMenu/CombineBrowserNode">
		<ItemSet id = "CombineAutotoolsMenu" _label = "Autotools" 
			insertafter= "CombineBuildGroupSeparator">
			<CommandItem id = "MonoDevelop.Autotools.Commands.GenerateFiles"/>
		</ItemSet>
		<SeparatorItem id = "Separator1" />
	</Extension>

	<Extension path = "/Autotools/SimpleSetups" extension-nodes="Class" description="SimpleSetups.|Specified classes must implement ISimpleAutotoolsSetup">
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/DeployHandlers">
		<Class class="MonoDevelop.Autotools.Handler" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/DeployTargetEditors">
		<Class class="MonoDevelop.Autotools.TarballTargetEditor" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/SerializableClasses">
		<DataType class = "MonoDevelop.Autotools.TarballDeployTarget" />
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/CombineOptions/GeneralOptions">
		<DialogPanel id= "AutoTools" _label = "Autotools"
			class = "MonoDevelop.AutoTools.SolutionOptionsPanel" />
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/ProjectOptions/GeneralOptions/Common">
		<DialogPanel id= "Makefile" _label = "Makefile Integration"
			class = "MonoDevelop.Autotools.MakefileOptionPanel" />
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/Serialization/ExtendedProperties">
		<ItemProperty class = "MonoDevelop.Projects.Combine"
			name = "MakePkgConfig" type = "System.Boolean" />
		<ItemProperty class = "MonoDevelop.Projects.Combine"
			name = "MakeLibPC" type = "System.Boolean" />
		<ItemProperty class = "MonoDevelop.Projects.Project"
			name = "MonoDevelop.Autotools.MakefileInfo" type = "MonoDevelop.Autotools.MakefileData" />
	</Extension>
	
</AddIn>
