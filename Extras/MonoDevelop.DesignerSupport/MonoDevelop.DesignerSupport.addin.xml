<Addin id          = "DesignerSupport"
       namespace   = "MonoDevelop"
       name        = "Visual Designer Support"
       author      = "Michael Hutchinson"
       copyright   = "MIT X11"
       url         = "http://www.monodevelop.com/"
       description = "Supporting services and pads for visual design tools."
	   category    = "MonoDevelop Core"
       version     = "0.14.0">
	
	<Runtime>
		<Import assembly = "MonoDevelop.DesignerSupport.dll"/>
	</Runtime>
	
	<Dependencies>
	    <Addin id="Core" version="0.14.0"/>
	    <Addin id="Core.Gui" version="0.14.0"/>
    	<Addin id="Projects" version="0.14.0"/>
		<Addin id="Projects.Gui" version="0.14.0"/>
		<Addin id="Ide" version="0.14.0"/>
		<Addin id="SourceEditor" version="0.14.0"/>
	</Dependencies>

	<!-- Extension points -->
	
	<ExtensionPoint path = "/MonoDevelop/DesignerSupport/ToolboxProviders" name = "Toolbox item providers">
		<Description>Provides items to the toolbox. Must implement MonoDevelop.DesignerSupport.Toolbox.IToolboxDefaultProvider and/or IToolboxDynamicProvider</Description>
		<ExtensionNode name="Class" />
	</ExtensionPoint>
	
	<ExtensionPoint path = "/MonoDevelop/DesignerSupport/ToolboxLoaders" name = "Toolbox loaders">
		<Description>Used to load ItemToolboxNodesToolbox into the Toolbox</Description>
		<ExtensionNode name="Class" />
	</ExtensionPoint>
	
	<ExtensionPoint path = "/MonoDevelop/DesignerSupport/CodeBehindProviders" name = "Code-behind providers">
		<Description>Used to load bind CodeBehind files to their associated files.</Description>
		<ExtensionNode name="Class" />
	</ExtensionPoint>
	
	<ExtensionPoint path = "/MonoDevelop/DesignerSupport/PropertyProviders" name = "Providers for the property grid">
		<ExtensionNode name="Class" />
	</ExtensionPoint>
	
	<!-- Extensions -->

	<Extension path = "/Workspace/Services">
		<Class id    = "DesignerSupportService"
		       class = "MonoDevelop.DesignerSupport.DesignerSupportService"/>
	</Extension>
	
	<Extension path = "/MonoDevelop/DesignerSupport/ToolboxLoaders">
		<Class id="ToolboxItemLoader" class="MonoDevelop.DesignerSupport.Toolbox.ToolboxItemToolboxLoader"/>
	</Extension>
	
	<Extension path = "/MonoDevelop/DesignerSupport/PropertyProviders" extension-nodes="Class">
		<Class class = "MonoDevelop.DesignerSupport.Projects.ProjectsPropertyProvider"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/DisplayBindings">
		<DisplayBinding id    = "CodeBehindView"
		                supportedformats = "Source Code"
		                class = "MonoDevelop.DesignerSupport.CodeBehind.CodeBehindDisplayBinding"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/SerializableClasses">
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.ToolboxItemToolboxNode" />
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.TextToolboxNode" />
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.TypeToolboxNode" />
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.ItemToolboxNode" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/Pads">
		<Pad id = "MonoDevelop.DesignerSupport.ToolboxPad" 
			class = "MonoDevelop.DesignerSupport.ToolboxPad" 
			_label="Toolbox" 
			defaultPlacement="right"/>
		<Pad id = "MonoDevelop.DesignerSupport.PropertyPad" 
			class = "MonoDevelop.DesignerSupport.PropertyPad" 
			_label="Properties"
			defaultPlacement="MonoDevelop.DesignerSupport.ToolboxPad/bottom; right" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/Contexts/Edit">
		<ContextPad id = "MonoDevelop.DesignerSupport.ToolboxPad" />
		<ContextPad id = "MonoDevelop.DesignerSupport.PropertyPad" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/Pads/MonoDevelop.Ide.Gui.Pads.ProjectPad">
		<PadOption id = "ShowCodeBehindClasses" _label = "Show CodeBehind classes with parent files" defaultValue = "True" />
		<PadOption id = "ShowCodeBehindFiles" _label = "Show CodeBehind files" defaultValue = "False" />
		<NodeBuilder id = "CodeBehindProjectFileExtension" class = "MonoDevelop.DesignerSupport.CodeBehind.CodeBehindProjectFileExtension"/>
		<NodeBuilder id = "CodeBehindClassBuilder" class = "MonoDevelop.DesignerSupport.CodeBehind.CodeBehindClassBuilder"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/StockIcons">
		<StockIcon stockid = "md-design-categorise" resource = "group-by-category.png" />
		<StockIcon stockid = "md-design-listboxtoggle" resource = "md-design-listboxtoggle.png" />
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/Pads/MonoDevelop.Ide.Gui.Pads.ProjectPad">
		<NodeBuilder class = "MonoDevelop.DesignerSupport.Projects.ComponentNodeBuilder"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/Pads/MonoDevelop.Ide.Gui.Pads.ClassPad">
		<NodeBuilder class = "MonoDevelop.DesignerSupport.Projects.ComponentNodeBuilder"/>
	</Extension>
</Addin>
