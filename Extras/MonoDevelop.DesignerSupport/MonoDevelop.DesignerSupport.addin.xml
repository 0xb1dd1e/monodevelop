<AddIn id          = "MonoDevelop.DesignerSupport"
       name        = "Visual Designer Support"
       author      = "Michael Hutchinson"
       copyright   = "MIT X11"
       url         = "http://www.monodevelop.com/"
       description = "Supporting services and pads for visual design tools."
	   category    = "IDE extensions"
       version     = "0.0.1">
	
	<Runtime>
		<Import assembly = "MonoDevelop.DesignerSupport.dll"/>
	</Runtime>
	
	<Dependencies>
	    <AddIn id="MonoDevelop.Core" version="0.11.0"/>
	    <AddIn id="MonoDevelop.Core.Gui" version="0.11.0"/>
    	<AddIn id="MonoDevelop.Projects" version="0.12.0"/>
		<AddIn id="MonoDevelop.Projects.Gui" version="0.11.0"/>
		<AddIn id="MonoDevelop.Ide" version="0.11.0"/>
		<AddIn id="MonoDevelop.SourceEditor" version="0.11.0"/>
	</Dependencies>
	
	<Extension path = "/Workspace/Services">
		<Class id    = "DesignerSupportService"
		       class = "MonoDevelop.DesignerSupport.DesignerSupportService"/>
	</Extension>
	
	<Extension path = "/MonoDevelop/DesignerSupport/ToolboxLoaders" extension-nodes="Class" description="Used to load ItemToolboxNodesToolbox into the Toolbox.">
		<Class id="ToolboxItemLoader" class="MonoDevelop.DesignerSupport.Toolbox.ToolboxItemToolboxLoader"/>
	</Extension>
	
	<Extension path = "/MonoDevelop/DesignerSupport/CodeBehindProviders" extension-nodes="Class" description="Used to load bind CodeBehind files to their associated files.">
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/DisplayBindings">
		<DisplayBinding id    = "CodeBehindView"
		                supportedformats = "Source Code"
		                class = "MonoDevelop.DesignerSupport.CodeBehind.CodeBehindDisplayBinding"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/SerializableClasses">
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.ToolboxItemToolboxNode" />
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.TextToolboxNode" />
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.TypeToolboxNode" />
		<DataType class = "MonoDevelop.DesignerSupport.Toolbox.ItemToolboxNode" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/Pads">
		<Pad id = "MonoDevelop.DesignerSupport.ToolboxPad" class = "MonoDevelop.DesignerSupport.ToolboxPad" _label="Toolbox" />
		<Pad id = "MonoDevelop.DesignerSupport.PropertyPad" class = "MonoDevelop.DesignerSupport.PropertyPad" _label="Properties" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/Contexts/Edit">
		<ContextPad id = "MonoDevelop.DesignerSupport.ToolboxPad" />
		<ContextPad id = "MonoDevelop.DesignerSupport.PropertyPad" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/Pads/MonoDevelop.Ide.Gui.Pads.ProjectPad">
		<PadOption id = "ShowCodeBehindClasses" _label = "Show CodeBehind classes with parent files" defaultValue = "True" />
		<PadOption id = "ShowCodeBehindFiles" _label = "Show CodeBehind files" defaultValue = "False" />
		<NodeBuilder id = "CodeBehindProjectFileExtension" class = "MonoDevelop.DesignerSupport.CodeBehind.CodeBehindProjectFileExtension"/>
		<NodeBuilder id = "CodeBehindClassBuilder" class = "MonoDevelop.DesignerSupport.CodeBehind.CodeBehindClassBuilder"/>
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/StockIcons">
		<StockIcon stockid = "md-design-categorise" resource = "group-by-category.png" />
	</Extension>
</AddIn>
