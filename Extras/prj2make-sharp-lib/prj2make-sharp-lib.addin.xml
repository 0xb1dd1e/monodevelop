<AddIn id = "MonoDevelop.Prj2Make"
       name	 = "Visual Studio .NET Solution Importer"
       author	 = "Francisco 'Paco' Martinez"
       copyright = "GPL"
       url       = ""
       description = "Generates MonoDevelop solutions from Visual Studio .NET solutions files"
	   category    = "IDE extensions"
       version   = "0.12">

	<Runtime>
		<Import assembly="prj2make-sharp-lib.dll"/>
	</Runtime>
	
	<Dependencies>
	    <AddIn id="MonoDevelop.Core" version="0.12.0"/>
	    <AddIn id="MonoDevelop.Core.Gui" version="0.12.0"/>
	    <AddIn id="MonoDevelop.Projects" version="0.12.0"/>
		<AddIn id="MonoDevelop.Ide" version="0.12.0"/>
		<AddIn id="CSharpBinding" version="0.7"/>
	</Dependencies>
	
	<Extension path = "/SharpDevelop/Commands">
		<Command id = "MonoDevelop.Prj2Make.Commands.ImportSolution"
			_label = "_Import Visual Studio .NET 2003 Project..."
			defaultHandler = "MonoDevelop.Prj2Make.ImportPrj"
			description = "Imports solutions created with MS Visual Studio .NET 2003"
			icon = "md-visual-studio" />
	</Extension>
	
	<Extension path = "/SharpDevelop/Workbench/ProjectFileFormats" extension-nodes="FileFormat" description="File format handlers for projects and solutions.">
		<FileFormat id="SlnFileFormat"
		            class="MonoDevelop.Prj2Make.SlnFileFormat"/>
		<FileFormat id="MSBuildFileFormat"
		            class="MonoDevelop.Prj2Make.MSBuildFileFormat"/>
	</Extension>

	<Extension path = "/SharpDevelop/Workbench/Combine/FileFilter" extension-nodes="FileFilter" >
		<FileFilter id = "SlnCombine"
		            _label = "Visual Studio 2005 Solution"
		            extensions = "*.sln"/>
		<FileFilter id = "MSBuildProject"
		            _label = "Visual Studio 2005 Project"
		            extensions = "*.csproj,*.vbproj"/>
	</Extension>

	<Extension path="/SharpDevelop/Workbench/MainMenu/File">
		<CommandItem id = "MonoDevelop.Prj2Make.Commands.ImportSolution" insertafter="MonoDevelop.Ide.Commands.FileCommands.OpenFile" />
	</Extension>
</AddIn>

